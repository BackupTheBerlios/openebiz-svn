<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="descriptionCode" target="flowScope.descriptionCode" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/DescriptionCodeTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayDescriptionCode">
			<action bean="formAction" method="bindAndValidate"
				result-name="descriptionCode" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayDescriptionCode" view="/views/cbc/DescriptionCodeTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.descriptionCode" target="descriptionCode" />
		</output-mapper>
	</end-state>

	<import resource="descriptioncodetype-bean.xml" />

</flow>