<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="priority" target="flowScope.priority" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/PriorityTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayPriority">
			<action bean="formAction" method="bindAndValidate"
				result-name="priority" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayPriority" view="/views/cbc/PriorityTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.priority" target="priority" />
		</output-mapper>
	</end-state>

	<import resource="prioritytype-bean.xml" />

</flow>