<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="value" target="flowScope.value" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/ValueTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayValue">
			<action bean="formAction" method="bindAndValidate"
				result-name="value" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayValue" view="/views/cbc/ValueTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.value" target="value" />
		</output-mapper>
	</end-state>

	<import resource="valuetype-bean.xml" />

</flow>