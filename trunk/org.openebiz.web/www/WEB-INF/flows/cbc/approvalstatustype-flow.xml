<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="approvalStatus" target="flowScope.approvalStatus" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/ApprovalStatusTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayApprovalStatus">
			<action bean="formAction" method="bindAndValidate"
				result-name="approvalStatus" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayApprovalStatus" view="/views/cbc/ApprovalStatusTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.approvalStatus" target="approvalStatus" />
		</output-mapper>
	</end-state>

	<import resource="approvalstatustype-bean.xml" />

</flow>