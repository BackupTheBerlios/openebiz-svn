<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="coordinateSystemCode" target="flowScope.coordinateSystemCode" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/CoordinateSystemCodeTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayCoordinateSystemCode">
			<action bean="formAction" method="bindAndValidate"
				result-name="coordinateSystemCode" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayCoordinateSystemCode" view="/views/cbc/CoordinateSystemCodeTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.coordinateSystemCode" target="coordinateSystemCode" />
		</output-mapper>
	</end-state>

	<import resource="coordinatesystemcodetype-bean.xml" />

</flow>