<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">


	<input-mapper>
		<mapping source="tradingRestrictionsList" target="flowScope.tradingRestrictionsList" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/lists/TradingRestrictionsTypeListForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayTradingRestrictionsTypeList">
			<action bean="formAction" method="bindAndValidate"
				result-name="tradingRestrictions" result-scope="flow" />
		</transition>
		<transition on="clearTradingRestrictions" to="clearTradingRestrictions">
			<action bean="formAction" method="bind" />
		</transition>
		<transition on="addTradingRestrictions" to="addTradingRestrictions">
			<action bean="formAction" method="bind" />
		</transition>						
	</view-state>

<!-- cbc case Trading Restrictions -->

	<view-state id="displayTradingRestrictionsTypeList" view="/views/lists/TradingRestrictionsTypeListView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.tradingRestrictionsList" target="tradingRestrictionsList" />
		</output-mapper>
	</end-state>

	<import resource="tradingrestrictionstypelist-bean.xml" />

</flow>