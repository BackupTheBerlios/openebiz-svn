<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="technicalName" target="flowScope.technicalName" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/TechnicalNameTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayTechnicalName">
			<action bean="formAction" method="bindAndValidate"
				result-name="technicalName" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayTechnicalName" view="/views/cbc/TechnicalNameTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.technicalName" target="technicalName" />
		</output-mapper>
	</end-state>

	<import resource="technicalnametype-bean.xml" />

</flow>