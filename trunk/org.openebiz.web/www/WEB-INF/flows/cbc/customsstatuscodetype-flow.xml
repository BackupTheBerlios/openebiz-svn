<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="customsStatusCode" target="flowScope.customsStatusCode" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/CustomsStatusCodeTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayCustomsStatusCode">
			<action bean="formAction" method="bindAndValidate"
				result-name="customsStatusCode" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayCustomsStatusCode" view="/views/cbc/CustomsStatusCodeTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.customsStatusCode" target="customsStatusCode" />
		</output-mapper>
	</end-state>

	<import resource="customsstatuscodetype-bean.xml" />

</flow>