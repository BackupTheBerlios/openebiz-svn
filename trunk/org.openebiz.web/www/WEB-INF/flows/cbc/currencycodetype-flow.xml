<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="currencyCode" target="flowScope.currencyCode" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/CurrencyCodeTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayCurrencyCode">
			<action bean="formAction" method="bindAndValidate"
				result-name="currencyCode" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayCurrencyCode" view="/views/cbc/CurrencyCodeTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.currencyCode" target="currencyCode" />
		</output-mapper>
	</end-state>

	<import resource="currencycodetype-bean.xml" />

</flow>