<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="minimumQuantity" target="flowScope.minimumQuantity" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/MinimumQuantityTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayMinimumQuantity">
			<action bean="formAction" method="bindAndValidate"
				result-name="minimumQuantity" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayMinimumQuantity" view="/views/cbc/MinimumQuantityTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.minimumQuantity" target="minimumQuantity" />
		</output-mapper>
	</end-state>

	<import resource="minimumquantitytype-bean.xml" />

</flow>