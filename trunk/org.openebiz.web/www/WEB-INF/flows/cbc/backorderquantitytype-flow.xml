<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="backOrderQuantity" target="flowScope.backOrderQuantity" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/BackOrderQuantityTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayBackOrderQuantity">
			<action bean="formAction" method="bindAndValidate"
				result-name="backOrderQuantity" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayBackOrderQuantity" view="/views/cbc/BackOrderQuantityTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.backOrderQuantity" target="backOrderQuantity" />
		</output-mapper>
	</end-state>

	<import resource="backorderquantitytype-bean.xml" />

</flow>