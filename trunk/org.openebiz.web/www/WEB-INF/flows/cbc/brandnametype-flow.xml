<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<input-mapper>
		<mapping source="brandName" target="flowScope.brandName" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/cbc/BrandNameTypeForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displayBrandName">
			<action bean="formAction" method="bindAndValidate"
				result-name="brandName" result-scope="flow" />
		</transition>
	</view-state>

	<view-state id="displayBrandName" view="/views/cbc/BrandNameTypeView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.brandName" target="brandName" />
		</output-mapper>
	</end-state>

	<import resource="brandnametype-bean.xml" />

</flow>