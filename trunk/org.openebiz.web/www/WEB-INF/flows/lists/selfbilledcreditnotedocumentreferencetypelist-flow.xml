<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE flow PUBLIC "-//SPRING//DTD WEBFLOW 1.0//EN"
	"http://www.springframework.org/dtd/spring-webflow-1.0.dtd">

<flow start-state="displayForm">

	<var name="item" class="com.bossart.enterprise.core.common.cac.DocumentReferenceType"/>

	<input-mapper>
		<mapping source="selfBilledCreditNoteDocumentReferenceList" target="flowScope.selfBilledCreditNoteDocumentReferenceList" />
	</input-mapper>

	<view-state id="displayForm" view="/forms/lists/SelfBilledCreditNoteDocumentReferenceTypeListForm">
		<entry-actions>
			<action bean="formAction" method="setupForm" />
		</entry-actions>
		<transition on="submit" to="displaySelfBilledCreditNoteDocumentReferenceTypeList">
			<action bean="formAction" method="bindAndValidate"
				result-name="selfBilledCreditNoteDocumentReference" result-scope="flow" />
		</transition>
		<transition on="clearSelfBilledCreditNoteDocumentReference" to="clearSelfBilledCreditNoteDocumentReference">
			<action bean="formAction" method="bind" />
		</transition>
		<transition on="addSelfBilledCreditNoteDocumentReference" to="addSelfBilledCreditNoteDocumentReference">
			<action bean="formAction" method="bind" />
		</transition>						
	</view-state>

	<subflow-state id="addSelfBilledCreditNoteDocumentReference" flow="documentreferencetype-flow">
		<attribute-mapper>
			<input-mapper>
				<mapping source="flowScope.item"
					target="documentReference" />
			</input-mapper>
			<output-mapper>
				<mapping source="documentReference"
					target="flowScope.item" />
			</output-mapper>
		</attribute-mapper>
		<transition on="finish" to="addUtil" />
	</subflow-state>

	<action-state id="addUtil">
		<action bean="listUtils"
			method="addToList(${flowScope.selfBilledCreditNoteDocumentReferenceList}, ${flowScope.item})">
		</action>
		<transition to="resetAttributes"></transition>
	</action-state>

	<action-state id="resetAttributes">
		<action bean="formAction" method="resetAttributes"></action>
		<transition to="displayForm"></transition>
	</action-state>	
	
	<action-state id="clearSelfBilledCreditNoteDocumentReference">
		<action bean="listUtils"
			method="clearList(${flowScope.selfBilledCreditNoteDocumentReferenceList})">
		</action>
		<transition to="displayForm"></transition>
	</action-state>		

	<view-state id="displaySelfBilledCreditNoteDocumentReferenceTypeList" view="/views/lists/SelfBilledCreditNoteDocumentReferenceTypeListView">
		<transition on="end" to="finish" />
	</view-state>

	<end-state id="finish">
		<output-mapper>
			<mapping source="flowScope.selfBilledCreditNoteDocumentReferenceList" target="selfBilledCreditNoteDocumentReferenceList" />
		</output-mapper>
	</end-state>

	<import resource="selfbilledcreditnotedocumentreferencetypelist-bean.xml" />

</flow>